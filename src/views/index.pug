extends layouts/base

//- Переменные для данной страницы
block vars
  - pageTitle = data.pageTitle
  include vars

//- Подключение шапки сайта
block header
  include partials/header

//- Подключение контентной части
block contentPage
  main.page
    div(data-observ)
    section.hero
      .hero__container
        h1.hero__title Разработка нейронных сетей
        .text-box
          p.text-lg Мы предлагаем услуги по разработке нейросетей на заказ для различных бизнес-целей.
          p.text-lg Мы готовы помочь вам улучшить процессы автоматизации и повысить эффективность бизнеса, создав интеллектуальные решения, которые точно отвечают вашим потребностям.
        a.hero__link.button(href='#cta') Оставить заявку

    section.description.section-space#description
      .description__container
        h2.title.title_dark.center.mb-30 Description

        .row-main
          .col-7-12.col-md-full
            .text-box.description__text
              each text in data.descriptionArticles
                p #{text}

          .col-5-12.col-md-full
            .image-ibg
              img(src='images/description.jpg', alt='Neural Network')

        .row-main.pt-60.description__items
          each item in data.descriptionItems
            .col-4-12.col-xs-full
              .description__item
                .description__icon
                  img(src=`images/icons/description/${item.icon}.svg`, alt='Icon')
                p #{item.text}

    .gradient
      section.process.section-space#process
        .process__container
          h2.title.center.mb-30 Описание процесса

          .accordion.process__accordion
            each item in data.processAccordion
              .accordion__item
                .accordion__header
                  p.upper.light-gray #{item.header}
                .accordion__content.text-box
                  each article in item.articles
                    p.text-md #{article}

      section.cases.section-space#cases
        .cases__container
          h2.title.center.mb-20 Кейсы

          img(src='images/cases/brain.png', alt='Brain').cases__image

          .tabs(data-tabs='cases')
            .tabs__nav
              each trigger in data.tabsCases.triggers
                button.tabs__trigger(type='button') #{trigger}

            .tabs__content
              each content in data.tabsCases.contents
                .tabs__panel
                  .row-main
                    .col-6-12.col-md-full
                      h3.light-gray #{content.title}

                      .text-box
                        each article in content.articles
                          p.light-gray #{article}

                      if content.list
                        ul.tabs-list-box.mt-20
                          each item in content.list
                            li.light-gray #{item}

                    .col-6-12.col-md-full.mt-md-20
                      .image-ibg
                        img(src=`images/cases/${content.imageName}`, alt=content.title)

      section.section-space.cta#cta
        .cta__container
          h2.title.center.mb-30.mb-md-20 Напишите мне, обсудим детали

          include partials/contactForm

//- Подключение подвала
block footer
  include partials/footer
